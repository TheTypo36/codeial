<link rel="stylesheet" href="/css/user_profile.css" type="text/css">
<div>

    <h1> User Profile</h1>

    <img src="<%=profile_user.avatar%>" alt="<%=user.name%>" width="300">

    <% if(user.id==profile_user.id) {%>
        <form method="POST" action="/user/update/<%=profile_user.id %>" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Enter the Name" value="<%=profile_user.name%>">
            <input type="email" name="email" placeholder="Enter the Email" value="<%=profile_user.email%>">
            <input type="file" name="avatar" placeholder="Profile Pic">
            <input type="submit" value="update">
        </form>

        <%}else{%>

            <h3>
                <%= profile_user.name %>
            </h3>
            <h3>
                <%= profile_user.email %>
            </h3>
            <small>
                <a class="toggle-friendship-btn" href="/user/friendship/?to=<%=profile_user.id%>">
                    add
                </a>
            </small>
            <%}%>
</div>
<script src="/js/toggle_friendship.js">
</script>
